---
extends: default
ignore: |
  vaulted.yml
rules:
  truthy:
    allowed-values: ["true", "false", "True", "False", "yes", "no"]
  line-length:
    max: 1000
    allow-non-breakable-words: true
    allow-non-breakable-inline-mappings: false
  braces:
    forbid: false
    min-spaces-inside: 0
    max-spaces-inside: 3
    min-spaces-inside-empty: -1
    max-spaces-inside-empty: -1
  quoted-strings:
    quote-type: any
    required: false
    extra-required: []
    extra-allowed: []
